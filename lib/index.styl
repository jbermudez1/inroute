@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Roboto:400,100,700');
// MIXIM
background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
	background-color startColor
	background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

$nav-height = 3em
body
	background-color white
	font-family 'Roboto', sans-serif
nav
	position absolute
	z-index 99
	width 100%
	height $nav-height
	background-linear-gradient(left, rgba(107,45,159, 0.7), 10%, rgba(29,152,206, 0.7), 55%)
	.container
		display flex
		align-items center
		height 100%
		.logo
			
			flex-grow 2
			display flex
			justify-content center
			img
				height $nav-height
		.menu
			font-size 2em
			color white
			padding 0.2em
		.hmenu
			ul 
				display flex
				color white
				list-style none
				li 
					padding 1em
.banner
	background-image url('../img/banner-fondo.jpg')
	height 50vh
	background-size cover
	background-position center
	padding-top $nav-height	
	display flex
	align-items center	
	color white
	position relative
	&:after
		content ""
		top 0
		left 0
		position absolute
		background-color rgba(0,0,0,0.5)
		height 100%
		width 100%
	.container
		z-index 99
		display flex
		flex-flow column
		height 100%
		.title
			flex-grow 1
			text-align center
			display flex
			flex-flow column
			justify-content center
		.icons
			padding-bottom 1em
			display flex
			justify-content center
			
			&-inroute
				display flex
				div
					margin-left 1em
					margin-right 1em
					max-width 10em
					width 4em
					display flex
					flex-flow column
					align-items center
					img
						max-width 3em
					p
						text-align center

section
	position relative
@import 'medias.styl'









